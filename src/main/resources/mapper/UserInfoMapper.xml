<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.webserver.dao.UserInfoMapper">
    <resultMap id="baseResultMap" type="com.platform.webserver.entity.UserInfoEntity" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="gender" property="gender" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_name, gender
    </sql>

    <select id="userInfoList" resultMap="baseResultMap">
        select
        <include refid="Base_Column_List"/>
        from user_info order by id
    </select>

    <insert id="add" parameterType="com.platform.webserver.entity.UserInfoEntity">
        insert into user_info(user_name, gender) values (#{user_name}, #{gender})
    </insert>

    <delete id="delete" parameterType="java.lang.String">
        delete from user_info where id = #{id}
    </delete>

</mapper>